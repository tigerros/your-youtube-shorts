{
  "manifest_version": 2,
  "author": "Leonard D.",
  "name": "No YouTube Shorts",
  "version": "1.0.1",
  "description": "Redirects the shorts player to the regular video player, and disables shorts on the home page.",
  "homepage_url": "https://github.com/tigerros/no-youtube-shorts",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "scripting",
    "https://www.youtube.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "no-youtube-shorts@tigerros.github.io"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}